<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/color_gray_f4f4f5">
    <ImageButton
        android:id="@+id/pharmacy_leftBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/pharmacy_layout_click_transparent"
        android:paddingBottom="20dp"
        android:paddingLeft="12dp"
        android:paddingRight="40dp"
        android:paddingTop="20dp"
        android:src="@drawable/pharmacy_blue_back"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/rightBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="13dp"
        android:background="@drawable/pharmacy_layout_click_transparent"
        android:textColor="@color/color_blue_00a5f9"
        android:textSize="15sp"
        android:text="编辑"
        />

    <TextView
        android:id="@+id/rightTv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:textColor="@color/top_title"
        android:textSize="14sp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_black_b2b2b2"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>