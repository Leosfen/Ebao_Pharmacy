<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/pharmacy_white"
              android:orientation="vertical"
    >

    <View
        android:id="@+id/item_addr_line_head"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/center_line_gray"
        />

    <TextView
        android:id="@+id/item_addr"
        style="@style/pharmacy_addr_tv"
        android:layout_centerInParent="true"
        android:paddingBottom="12dp"
        android:paddingLeft="10dp"
        android:paddingTop="16dp"
        android:singleLine="false"
        android:text="北京市朝阳区坤沙中心"
        android:textSize="15sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:paddingLeft="10dp"

        >

        <TextView
            android:id="@+id/item_addr_list_receivename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刘艳艳"
            android:textColor="@color/color_black_666666"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/item_addr_list_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="13840053215"
            android:textColor="@color/color_black_666666"
            android:textSize="13sp"
            />
    </LinearLayout>

    <View
        style="@style/pharmacy_center_line_gray"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        
        <TextView
            android:id="@+id/item_addr_list_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/pharmacy_address_icon_unselected"
            android:drawablePadding="10dp"
            android:text="默认地址"
            android:textColor="@color/color_black_666666"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/item_addr_list_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/item_addr_list_delete"
            android:drawableLeft="@drawable/pharmacy_address_icon_edit"
            android:drawablePadding="5dp"
            android:text="编辑"
            android:textColor="@color/color_black_666666"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/item_addr_list_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/pharmacy_address_icon_delete"
            android:drawablePadding="5dp"
            android:text="删除"
            android:textColor="@color/color_black_666666"
            android:textSize="13sp"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/center_line_gray"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_gray_efeff4"
        />


</LinearLayout>