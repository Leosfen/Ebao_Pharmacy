<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/pharmacy_white"
              android:orientation="vertical"
              android:paddingRight="5dp"
              android:paddingTop="8dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="13dp"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.ebaonet.pharmacy.sdk.adapt.SquareImageView
                    android:id="@+id/drug_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/pharmacy_list_pic_default_02"
                    android:scaleType="fitXY"
                    />

                <ImageView
                    android:id="@+id/img_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/pharmacy_watermark"
                    android:visibility="gone"
                    />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/drug_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="维生素维生素维生素维生素维生素维生素维生素维生素维生素维生素维生素维生素维生素维生素"
                android:textColor="@color/textcolor_303030"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/drug_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="维生素维生素"
                android:textColor="@color/color_gray_999999"
                android:textSize="12sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp">


                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/pharmacy_label_discount"
                        android:layout_marginRight="5dp"
                        />

                    <TextView
                        android:id="@+id/drug_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="折后价"
                        android:textColor="@color/color_red_ff6766"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/drug_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/drug_discount"
                        android:text="原价"
                        android:textColor="@color/color_gray_999999"
                        android:textSize="11sp"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/commit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/pharmacy_purchase"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_item_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    />


            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:background="@color/center_line_gray"
        ></LinearLayout>
</LinearLayout>
