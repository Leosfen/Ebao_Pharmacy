<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    >

    <TextView
        android:id="@+id/pharamcy_right_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:padding="10dp"
        android:textSize="@dimen/right_item_text_size"
        android:text="皮肤护理"
        android:textColor="@color/color_black_666666"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/center_line_gray">

    </View>

    <com.ebaonet.pharmacy.view.MyGridview
        android:id="@+id/pharmcy_gridview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:listSelector="@color/pharmacy_transparentcolor"
        android:numColumns="3">
    </com.ebaonet.pharmacy.view.MyGridview>
</LinearLayout>
