<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:background="@null"
    >
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/pharmacy_addr_delete_dialog_bg"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/dialog_tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:gravity="center"
            android:text="确定要删除该地址吗?"
            android:textColor="@color/color_black_484747"
            android:textSize="15sp"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/color_gray_aeaeaf"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:background="@null"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingBottom="1dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/dialog_tv_cancel"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:background="@drawable/pharmacy_layout_click_bg"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/color_gray_9c9c9c"
                android:textSize="16sp"
                />
            <View
                android:layout_width="0.51px"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:background="@color/color_gray_aeaeaf"
                />
            <TextView
                android:id="@+id/dialog_tv_confirm"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:background="@drawable/pharmacy_layout_click_bg"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/color_blue_00a5f9"
                android:textSize="16sp"
                />
        </LinearLayout>
    </LinearLayout>

  
</RelativeLayout>