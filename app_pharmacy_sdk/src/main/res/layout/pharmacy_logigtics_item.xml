<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:paddingRight="10dp">
    
    <RelativeLayout
        android:id="@+id/rl_left"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="gone">

        <!--android:layout_marginLeft="8dp"-->
        <LinearLayout
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:background="@color/textcolor_b8b8b8"
            android:gravity="center_horizontal"
            >
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/pharmacy_logistics_point_gray"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <!--android:layout_marginLeft="8dp"-->


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/pharmacy_logistics_point_green"/>

        <LinearLayout
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0.5dp"
            android:background="@color/textcolor_b8b8b8"
            android:gravity="center_horizontal"
            >
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:orientation="vertical"
        android:paddingTop="10dp"
         >

        <TextView
            android:id="@+id/logistics_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="药品已签收，期待再次为您服务"
            android:textColor="@color/textcolor_666666"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/logistics_item_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2016-05-29 12:35:20"
            android:textColor="@color/textcolor_9c9c9c"
            android:textSize="10sp"/>

        <View
            android:id="@+id/item_line"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@color/textcolor_b8b8b8">
        </View>
    </LinearLayout>
</LinearLayout>
