<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#F4F4F5">

    <ImageButton
        android:id="@+id/pharmacy_leftBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/pharmacy_layout_click_transparent"
        android:paddingBottom="20dp"
        android:paddingLeft="12dp"
        android:paddingRight="40dp"
        android:paddingTop="20dp"
        android:src="@drawable/pharmacy_blue_back"/>

    <TextView
        android:id="@+id/pharmacy_leftTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/pharmacy_layout_click_transparent"
        android:paddingLeft="12dp"
        android:text="全选"
        android:textColor="@color/pharmacy_black"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/pharmacy_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:textColor="@color/pharmacy_black"
        android:textSize="16sp"/>

    <ImageButton
        android:id="@+id/pharmacy_rightBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/pharmacy_layout_click_transparent"
        android:paddingBottom="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="12dp"
        android:paddingTop="20dp"
        android:src="@drawable/pharmacy_druginfo_bg_more"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/pharmacy_rightTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/pharmacy_layout_click_transparent"
        android:textColor="@color/textview_bg_circle_color3"
        android:textSize="14sp"
        android:visibility="gone"/>

    <LinearLayout
        style="@style/pharmacy_divider_line"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>